{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noEmit": false,
    "resolveJsonModule": true,
    "allowJs": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
