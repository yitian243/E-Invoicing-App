{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "test": "jest --testMatch \"**/?(*.)+(test).ts\"",
    "tsc": "tsc --noImplicitAny",
    "lint": "eslint src/**/*.{ts,js}",
    "lint-fix": "eslint --fix src/**/*.{ts,js}",
    "start": "ts-node -T src/server.ts",
    "ts-node-coverage": "nyc --reporter=text --reporter=lcov ts-node -T src/server.ts",
    "posttest": "pkill -f 'node_modules/sync-rpc/lib/worker.js' > /dev/null 2>&1",
    "build": "tsc --project tsconfig.json",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "middleware-http-errors": "^0.1.1",
    "nodemailer": "^6.10.1",
    "resend": "^4.3.0",
    "uuid": "^9.0.0",
    "validator": "^13.7.0",
    "@supabase/supabase-js": "^2.49.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.27.0",
    "@babel/preset-env": "^7.26.9",
    "@jest/globals": "^29.7.0",
    "@types/axios": "^0.14.0",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.30",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@types/validator": "^13.11.10",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "src/tsconfig.json"
        }
      ]
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
